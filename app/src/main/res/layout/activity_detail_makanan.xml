<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMakanan">

    <ImageView
        android:id="@+id/image_detail"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_height="180dp"/>

    <TextView
        android:id="@+id/detail_nama_makanan"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="@string/nama_makanan"
        android:layout_toRightOf="@+id/image_detail"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/desc"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_detail"/>

    <com.codesgood.views.JustifiedTextView
        android:layout_below="@+id/desc"
        android:id="@+id/desc_detail"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/lorem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/spinner"
        android:padding="10dp"
        android:layout_margin="16dp"
        android:layout_below="@id/desc_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>